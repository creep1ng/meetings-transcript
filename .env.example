# =============================================================================
# Environment Configuration for Meetings Transcript
# Copy this file to .env and fill in the required values
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Credentials (required for S3 access)
# -----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# S3 Configuration (required)
# -----------------------------------------------------------------------------
S3_BUCKET_NAME=your-bucket-name
VIDEO_PREFIX=videos/
TRANSCRIPTS_PREFIX=transcripts/

# -----------------------------------------------------------------------------
# Transcription Settings
# -----------------------------------------------------------------------------
# TRANSCRIBE_PROVIDER=whisper/local  # Only supported provider
MODEL_SIZE=small                     # tiny, base, small, medium, large, turbo
DEVICE=cpu                           # cpu or cuda (cuda requires GPU)
# TRANSCRIPT_CHUNK_SECONDS=0         # 0 to disable, >0 to enable chunking
# DOWNLOAD_CHUNK_BYTES=10485760      # 10MB chunks for streaming downloads

# -----------------------------------------------------------------------------
# Concurrency
# -----------------------------------------------------------------------------
# MAX_CONCURRENT_JOBS=1

# -----------------------------------------------------------------------------
# Timeouts and Retries
# -----------------------------------------------------------------------------
# S3_TIMEOUT=300                     # Seconds for S3 operations
# TRANSCRIPTION_TIMEOUT=3600         # Seconds for transcription jobs
# MAX_RETRIES=3
# RETRY_BACKOFF_BASE=2.0

# -----------------------------------------------------------------------------
# Validation Limits
# -----------------------------------------------------------------------------
# MAX_FILE_SIZE_BYTES=2147483648     # 2GB maximum file size

# -----------------------------------------------------------------------------
# Logging and Tracing
# -----------------------------------------------------------------------------
# LOG_LEVEL=INFO                     # DEBUG, INFO, WARNING, ERROR
# ENABLE_TRACING=false               # true/false for OpenTelemetry hooks
